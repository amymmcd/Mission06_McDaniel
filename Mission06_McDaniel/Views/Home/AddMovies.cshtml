@model Movie

@{
    ViewData["Title"] = "Add a Movie";
}

<div class="container mt-4 col-md-6">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <form method="post" class="shadow p-4 bg-light rounded">
        <input type="hidden" asp-for="MovieId">

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title:</label>
            <input asp-for="Title" type="text" class="form-control" required>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category:</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="" selected disabled></option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Year" class="form-label">Year:</label>
            <input asp-for="Year" type="number" class="form-control" required>
        </div>

        <div class="mb-3">
            <label asp-for="Director" class="form-label">Director:</label>
            <input asp-for="Director" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="Rating" class="form-label">Rating:</label>
            <select asp-for="Rating" class="form-select">
                <option value="" selected disabled></option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Edited" class="form-label">Edited?</label>
            <select asp-for="Edited" class="form-select" required>
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="LentTo" class="form-label">Lent To:</label>
            <input asp-for="LentTo" type="text" class="form-control">
        </div>

        <div class="mb-3">
            <label asp-for="CopiedToPlex" class="form-label">Copied to Plex?</label>
            <select asp-for="CopiedToPlex" class="form-select" required>
                <option value="false">No</option>
                <option value="true">Yes</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Notes" class="form-label">Notes (Max 25 characters):</label>
            <input asp-for="Notes" type="text" class="form-control" maxlength="25">
        </div>

        <button type="submit" class="btn btn-primary w-100">Submit Movie</button>
    </form>

    <div asp-validation-summary="All" class="text-danger mt-3"></div>
</div>
